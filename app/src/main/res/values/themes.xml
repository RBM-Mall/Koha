<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.bbb.koha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="DrawerSideBarIcons">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="DrawerSideBarText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_light</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="BoldTextAppearance">
        <item name="android:fontFamily">@font/kameron_bold</item>
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="edittext" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_44sdp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#677294</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="background">@drawable/edittext_background</item>
    </style>

    <style name="textview" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="textview_regular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="textview_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/button_background</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>